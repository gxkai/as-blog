{
  "name": "@as1024/world",
  "version": "1.0.0",
  "author": "Alvaro Saburido <hola@alvarosaburido.dev> (https://github.com/alvarosabu/)",
  "description": "AS 20XX Personal Portfolio, Blog, CV, Labs",
  "license": "MIT",
  "workspaces": [
    "apps/**",
    "packages/*"
  ],
  "engines": {
    "node": ">16.0.0",
    "pnpm": ">=6"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "update-deps": "pnpm update -i -r --latest",
    "changelog": "echo 'generate master changelog' && conventional-changelog -p angular -i CHANGELOG.md -s && git add CHANGELOG.md",
    "changeset": "changeset",
    "publish": "pnpm publish -r",
    "test": "pnpm run test:utils",
    "build:ci": "turbo run generate --filter=portfolio",
    "build:all": "turbo run --filter=./packages/* build",
    "ci:version": "pnpm changelog && pnpx changeset version && pnpm install --no-frozen-lockfile --shamefully-hoist && git add .",
    "ci:publish": "pnpm build:all && git status && pnpm publish -r && pnpm changeset tag",
    "changeset-publish": "changeset publish",
    "changeset-tag": "changeset tag",
    "test:e2e:ci:portfolio": "turbo run  test:e2e:ci --filter=portfolio",
    "test:utils": "turbo run  test:ci --filter=utils",
    "clean": "pnpm -r exec rm -rf node_modules",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx,.vue",
    "lint:fix": "eslint . --fix --ext .js,.jsx,.ts,.tsx,.vue",
    "story:dev:ui": "turbo run story:dev --filter=ui",
    "story:build:ui": "turbo run story:build --filter=ui",
    "dev:ui": "turbo run dev --filter=ui",
    "build:ui": "turbo run build --filter=ui",
    "story:dev:portfolio": "turbo run story:dev --filter=portfolio",
    "dev:portfolio": "turbo run dev --filter=portfolio",
    "build:portfolio": "turbo run build --filter=portfolio",
    "generate:portfolio": "turbo run generate --filter=portfolio",
    "start:portfolio": "turbo run generate --filter=portfolio"
  },
  "devDependencies": {
    "@as1024/prettier-config": "workspace:^1.1.0",
    "@changesets/changelog-github": "0.4.8",
    "@changesets/cli": "2.26.0",
    "@nuxtjs/eslint-config-typescript": "10.0.0",
    "@rushstack/eslint-patch": "1.2.0",
    "@typescript-eslint/eslint-plugin": "5.47.0",
    "@typescript-eslint/parser": "5.47.0",
    "conventional-changelog-cli": "2.2.2",
    "eslint": "8.30.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-vue": "9.8.0",
    "prettier": "2.8.1",
    "vue-eslint-parser": "9.1.0",
    "@babel/core": "7.20.5",
    "@babel/preset-env": "7.20.2",
    "@babel/preset-typescript": "7.18.6",
    "turbo": "1.6.3"
  }
}
